{
  "name": "bus-management",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:server:build": "tsc -p tsconfig.server.json",
    "dev:server:start": "node dist/server.js",
    "dev": "npm run dev:server:build && npm run dev:server:start",
    "dev:full": "concurrently -k \"cross-env SOCKET_ORIGIN=http://localhost:4000 next dev\" \"npm:dev:server:start\"",
    "build": "next build && tsc -p tsconfig.server.json",
    "postinstall": "tsc -p tsconfig.server.json || true",
    "start": "node dist/server.js",
    "lint": "eslint"
  },
  "dependencies": {
    "@ant-design/icons": "^6.1.0",
    "@ant-design/nextjs-registry": "^1.3.0",
    "antd": "^6.0.1",
    "bcryptjs": "^3.0.3",
    "cookie": "^1.1.1",
    "dayjs": "^1.11.10",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^9.0.0",
    "next": "^16.1.2",
    "node-cron": "^4.2.1",
    "qs": "^6.14.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "recharts": "^3.5.1",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie": "^0.6.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.29",
